<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <com.hjq.bar.TitleBar
        android:id="@+id/bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="密码修改"
        app:rightTitle="完成"
        app:rightTitleColor="#EC3937"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:text="152****1935"
        android:background="@color/white"
        android:textColor="#333333"
        android:textSize="14sp" />


    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginHorizontal="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.diskkiller.widget.view.ClearEditText
            android:id="@+id/et_password_code"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/common_code_input_hint"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:paddingHorizontal="20dp"
            android:paddingVertical="18dp"
            android:textSize="15sp"
            android:singleLine="true" />

        <com.diskkiller.widget.view.CountdownView
            android:id="@+id/cv_password_countdown"
            android:background="@drawable/shape_r5_white_bg"
            android:backgroundTint="#FFEBEB"
            style="@style/CountdownViewStyle" />

    </LinearLayout>

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginHorizontal="20dp" />

    <com.diskkiller.widget.view.PasswordEditText
        android:id="@+id/et_password_reset_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/password_reset_phone_hint1"
        android:inputType="textPassword"
        android:maxLength="8"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp"
        android:textSize="15sp"
        android:singleLine="true" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginHorizontal="20dp" />

    <com.diskkiller.widget.view.PasswordEditText
        android:id="@+id/et_password_reset_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/password_reset_phone_hint2"
        android:imeOptions="actionDone"
        android:maxLength="8"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp"
        android:textSize="15sp"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_password_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/shape_r5_white_bg"
        android:backgroundTint="@color/main"
        android:textColor="@color/white"
        android:text="提交"/>

</LinearLayout>