<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"
    style="@style/lmhm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="首页"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/right_icon"
            style="@style/lwhw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:src="@mipmap/fragment_homt_right_icon"
            />



    </LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_152"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        app:banner_radius="@dimen/dp_5"
        />

    <LinearLayout
        android:id="@+id/view_notification_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/fragment_notification_bg"
        >

        <View
            android:id="@+id/notification"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_14"
            android:background="@mipmap/fragment_homt_notification_icon"
             />


        <com.gongwen.marqueen.SimpleMarqueeView
            android:id="@+id/marquee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:paddingStart="@dimen/dp_30"
            android:flipInterval="2500"
            app:marqueeAnimDuration="2000"
            app:smvTextColor="@color/color_ff333333"
            app:smvTextEllipsize="end"
            app:smvTextGravity="center_vertical"
            app:smvTextSingleLine="true"
            app:smvTextSize="@dimen/sp_14"

           />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        >
        <LinearLayout
            android:id="@+id/ll_view_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@mipmap/fragment_type_one_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政务大厅"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fragment_type_two_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社区新闻"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fragment_type_three_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防疫动态"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fragment_type_four_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社工在线"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
        android:id="@+id/ll_view_five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:visibility="visible"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fragment_type_five_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="培训活动"
            android:layout_marginTop="5dp"
            android:textColor="#ff57515f"
            android:textSize="12sp"
            />

    </LinearLayout>
        <LinearLayout
        android:id="@+id/ll_view_six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fragment_type_six_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="便民服务"
            android:layout_marginTop="5dp"
            android:textColor="#ff57515f"
            android:textSize="12sp"
            />

    </LinearLayout>
        <LinearLayout
        android:id="@+id/ll_view_seven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fragment_type_seven_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠团购"
            android:layout_marginTop="5dp"
            android:textColor="#ff57515f"
            android:textSize="12sp"
            />

    </LinearLayout>
        <LinearLayout
        android:id="@+id/ll_view_eight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fragment_type_eight_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物业服务"
            android:layout_marginTop="5dp"
            android:textColor="#ff57515f"
            android:textSize="12sp"
            />

    </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/home_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头条新闻"
            android:textColor="@color/color_ff333333"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/move"
            style="@style/lwhw"
            android:drawablePadding="@dimen/dp_2"
            android:drawableRight="@mipmap/fragment_home_move_icon"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/color_ff999999"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="20dp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/rl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>