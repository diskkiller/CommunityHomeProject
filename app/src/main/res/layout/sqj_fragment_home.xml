<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    style="@style/lmhm">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/lmhm">

        <ImageView
            android:id="@+id/view_one_img"
            style="@style/fragment_home_type_icon"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/fragment_type_one_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_notification_bg" />

        <ImageView
            android:id="@+id/view_two_img"
            style="@style/fragment_home_type_icon"
            android:background="@mipmap/fragment_type_two_icon"
            app:layout_constraintLeft_toRightOf="@+id/view_one_img"
            app:layout_constraintRight_toLeftOf="@+id/view_three_img"
            app:layout_constraintTop_toTopOf="@+id/view_one_img" />


        <ImageView
            android:id="@+id/view_three_img"
            style="@style/fragment_home_type_icon"
            android:background="@mipmap/fragment_type_three_icon"
            app:layout_constraintLeft_toRightOf="@+id/view_two_img"
            app:layout_constraintRight_toLeftOf="@+id/view_four_img"
            app:layout_constraintTop_toTopOf="@+id/view_one_img" />

        <ImageView
            android:id="@+id/view_four_img"
            style="@style/fragment_home_type_icon"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@mipmap/fragment_type_four_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_one_img" />

        <ImageView
            android:id="@+id/view_five_img"
            style="@style/fragment_home_type_icon"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@mipmap/fragment_type_five_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_one_text" />


        <ImageView
            android:id="@+id/view_six_img"
            style="@style/fragment_home_type_icon"
            android:background="@mipmap/fragment_type_six_icon"
            app:layout_constraintLeft_toRightOf="@+id/view_five_img"
            app:layout_constraintRight_toLeftOf="@+id/view_seven_img"
            app:layout_constraintTop_toTopOf="@+id/view_five_img" />

        <ImageView
            android:id="@+id/view_seven_img"
            style="@style/fragment_home_type_icon"
            android:background="@mipmap/fragment_type_seven_icon"
            app:layout_constraintLeft_toRightOf="@+id/view_six_img"
            app:layout_constraintRight_toLeftOf="@+id/view_eight_img"
            app:layout_constraintTop_toTopOf="@+id/view_five_img" />

        <ImageView
            android:id="@+id/view_eight_img"
            style="@style/fragment_home_type_icon"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@mipmap/fragment_type_eight_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_five_img" />

        <TextView
            android:id="@+id/title"
            style="@style/lwhw"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_44"
            android:text="首页"
            android:textColor="@color/color_ff333330"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/view_one_text"
            style="@style/fragment_home_type_text"
            android:text="政务大厅"
            app:layout_constraintLeft_toLeftOf="@+id/view_one_img"
            app:layout_constraintRight_toRightOf="@+id/view_one_img"
            app:layout_constraintTop_toBottomOf="@+id/view_one_img" />

        <TextView
            android:id="@+id/view_two_text"
            style="@style/fragment_home_type_text"
            android:text="社区新闻"
            app:layout_constraintLeft_toLeftOf="@+id/view_two_img"
            app:layout_constraintRight_toRightOf="@+id/view_two_img"
            app:layout_constraintTop_toBottomOf="@+id/view_two_img" />

        <TextView
            android:id="@+id/view_three_text"
            style="@style/fragment_home_type_text"
            android:text="防疫动态"
            app:layout_constraintLeft_toLeftOf="@+id/view_three_img"
            app:layout_constraintRight_toRightOf="@+id/view_three_img"
            app:layout_constraintTop_toBottomOf="@+id/view_three_img" />

        <TextView
            android:id="@+id/view_four_text"
            style="@style/fragment_home_type_text"
            android:text="社工在线"
            app:layout_constraintLeft_toLeftOf="@+id/view_four_img"
            app:layout_constraintRight_toRightOf="@+id/view_four_img"
            app:layout_constraintTop_toBottomOf="@+id/view_four_img" />

        <TextView
            android:id="@+id/view_five_text"
            style="@style/fragment_home_type_text"
            android:text="培训活动"
            app:layout_constraintLeft_toLeftOf="@+id/view_five_img"
            app:layout_constraintRight_toRightOf="@+id/view_five_img"
            app:layout_constraintTop_toBottomOf="@+id/view_five_img" />

        <TextView
            android:id="@+id/view_six_text"
            style="@style/fragment_home_type_text"
            android:text="便民服务"
            app:layout_constraintLeft_toLeftOf="@+id/view_six_img"
            app:layout_constraintRight_toRightOf="@+id/view_six_img"
            app:layout_constraintTop_toBottomOf="@+id/view_six_img" />

        <TextView
            android:id="@+id/view_seven_text"
            style="@style/fragment_home_type_text"
            android:text="优惠团购"
            app:layout_constraintLeft_toLeftOf="@+id/view_seven_img"
            app:layout_constraintRight_toRightOf="@+id/view_seven_img"
            app:layout_constraintTop_toBottomOf="@+id/view_seven_img" />

        <TextView
            android:id="@+id/view_eight_text"
            style="@style/fragment_home_type_text"
            android:text="物业服务"
            app:layout_constraintLeft_toLeftOf="@+id/view_eight_img"
            app:layout_constraintRight_toRightOf="@+id/view_eight_img"
            app:layout_constraintTop_toBottomOf="@+id/view_eight_img" />

        <TextView
            android:id="@+id/home_title"
            style="@style/lwhw"
            android:layout_marginTop="@dimen/dp_28"
            android:text="头条新闻"
            android:textColor="@color/color_ff333333"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/view_notification_bg"
            app:layout_constraintTop_toBottomOf="@+id/view_eight_text" />

        <TextView
            android:id="@+id/move"
            style="@style/lwhw"
            android:drawablePadding="@dimen/dp_2"
            android:drawableRight="@mipmap/fragment_home_move_icon"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/color_ff999999"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/home_title"
            app:layout_constraintRight_toRightOf="@id/view_notification_bg"
            app:layout_constraintTop_toTopOf="@+id/home_title" />

        <ImageView
            android:id="@+id/right_icon"
            style="@style/lwhw"
            android:paddingEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:src="@mipmap/fragment_homt_right_icon"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <View
            android:id="@+id/view_notification_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/fragment_notification_bg"
            app:layout_constraintTop_toBottomOf="@+id/banner" />

<!--        android:inAnimation="@anim/in_right"-->
<!--        android:outAnimation="@anim/out_left"-->

        <com.gongwen.marqueen.SimpleMarqueeView
            android:id="@+id/marquee"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:paddingStart="@dimen/dp_30"

            android:flipInterval="2500"
            app:marqueeAnimDuration="2000"
            app:smvTextColor="@color/color_ff333333"
            app:smvTextEllipsize="end"
            app:smvTextGravity="center_vertical"
            app:smvTextSingleLine="true"
            app:smvTextSize="@dimen/sp_14"

            app:layout_constraintBottom_toBottomOf="@+id/view_notification_bg"
            app:layout_constraintEnd_toEndOf="@+id/view_notification_bg"
            app:layout_constraintStart_toEndOf="@+id/notification"
            app:layout_constraintTop_toTopOf="@+id/view_notification_bg" />


        <View
            android:id="@+id/notification"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_14"
            android:background="@mipmap/fragment_homt_notification_icon"
            app:layout_constraintBottom_toBottomOf="@+id/view_notification_bg"
            app:layout_constraintLeft_toLeftOf="@+id/view_notification_bg"
            app:layout_constraintTop_toTopOf="@+id/view_notification_bg" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            style="@style/lmhw"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/home_title" />

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_152"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            app:banner_radius="@dimen/dp_5"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>