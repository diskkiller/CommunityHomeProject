<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sqj_bg_white_shap_7"
    tools:ignore="MissingConstraints"
    android:paddingVertical="10dp"
    android:layout_marginTop="10dp"
    >


    <TextView
        android:id="@+id/item_time"
        style="@style/lwhw"
        android:text="2022-02-22 14:22"
        android:textColor="@color/color_ff999999"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/item_divide"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/color_FFF2F2F2" />



    <TextView
        android:id="@+id/item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff999999"
        android:text=""
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:paddingHorizontal="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@+id/item_divide"
        app:layout_constraintStart_toStartOf="@+id/item_divide"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/item_divide_bottom"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_content"
        android:background="@color/color_FFF2F2F2" />

    <TextView
        android:id="@+id/item_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="设置群提醒"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/shap_storke_r4_red"
        app:layout_constraintTop_toBottomOf="@+id/item_divide_bottom"
        app:layout_constraintRight_toLeftOf="@id/item_del"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="删除群公告"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/system_item_fing_bg"
        app:layout_constraintTop_toBottomOf="@+id/item_divide_bottom"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>