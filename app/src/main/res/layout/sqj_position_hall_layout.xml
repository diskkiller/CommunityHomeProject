<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hjq.bar.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/postion_hall_title"
        />
    <ImageView
        android:id="@+id/splash_iv"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        app:layout_constraintTop_toBottomOf="@+id/tb_title"
        android:src="@mipmap/position_hall_banner"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf ="@+id/splash_iv">


        <LinearLayout
            android:id="@+id/ll_view_1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/position_hall_1_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_1_1"
                style="@style/position_hall_text"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/position_hall_1_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_1_2"
                style="@style/position_hall_text"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/position_hall_1_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_1_3"
                style="@style/position_hall_text"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_1_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/position_hall_1_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_1_4"
                style="@style/position_hall_text"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>






    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf ="@+id/ll_1">

        <LinearLayout
            android:id="@+id/ll_view_2_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/position_hall_2_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_2_1"
                style="@style/position_hall_text"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_2_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
               style="@style/position_hall_image"
                android:background="@mipmap/position_hall_2_2"/>
            <TextView
                style="@style/position_hall_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_2_2"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:visibility="invisible"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fragment_type_three_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防疫动态"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:visibility="invisible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/fragment_type_three_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/postion_hall_2_2"
                android:layout_marginTop="5dp"
                android:textColor="#ff57515f"
                android:textSize="12sp"
                />

        </LinearLayout>






    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
