<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sqj_bg_white_shap_12"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_week_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/str_private_agreement_content"
            android:textColor="#999999"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yinsi_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/str_to_private_detail"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_yonghu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/str_to_agreement_detail"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/sqj_btn_check"
            android:paddingStart="10dp"
            android:text="@string/str_select_agreement_ok"
            android:textColor="@color/black"
            android:textSize="13sp"
            />

    </LinearLayout>
</LinearLayout>