<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_new_friends"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/color_ffffff"
        >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/niv_avater"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_friend_tips" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/niv_avater"
            android:text="新的好友"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:background="@drawable/sqj_bg_white_shap_30"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_my_groups"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/niv_group"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_my_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/niv_group"
            android:text="我的群组"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_grou_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:background="@drawable/sqj_bg_white_shap_30"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_my_shegong"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/niv_shegong"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_my_shegong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/niv_shegong"
            android:text="专属社工"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_shegong_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:background="@drawable/sqj_bg_white_shap_30"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_my_zone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/niv_zone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/icon_my_shegong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/niv_zone"
            android:text="业主架构"
            android:textColor="#ff333333"
            android:textSize="17sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_zone_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:background="@drawable/sqj_bg_white_shap_30"
            android:backgroundTint="@color/red"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>