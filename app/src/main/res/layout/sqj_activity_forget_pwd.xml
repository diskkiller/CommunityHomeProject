<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hjq.bar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/login_forget"
            android:textColor="#ff333333"
            android:textSize="25sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="21dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:text="@string/beijingtong_account_hint"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="13dp"
                android:text="@string/code_86"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:background="#DDDDDD" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="13dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/input_phone_hint"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="11"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.diskkiller.widget.view.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/common_code_input_hint"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingHorizontal="20dp"
                android:paddingVertical="18dp"
                android:textSize="15sp"
                android:singleLine="true" />

            <com.diskkiller.widget.view.CountdownView
                android:id="@+id/tv_get_code"
                android:background="@drawable/shape_r5_white_bg"
                android:backgroundTint="#FFEBEB"
                style="@style/CountdownViewStyle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="#DDDDDD" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="登录密码（6～8位数字字母组合）"
            android:inputType="textPassword"
            android:maxLength="8"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="#DDDDDD" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLength="8"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:background="#DDDDDD" />


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_r5_white_bg"
            android:backgroundTint="#EC3937"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/confirm_str"
            android:textColor="#ffffffff"
            android:textSize="17sp" />


    </LinearLayout>
</RelativeLayout>