<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.me.SettingActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="设置"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.diskkiller.widget.layout.SettingBar
                android:id="@+id/sb_setting_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="清除缓存"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />
            <com.diskkiller.widget.layout.SettingBar
                android:id="@+id/sb_setting_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="用户协议"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />

            <com.diskkiller.widget.layout.SettingBar
                android:id="@+id/sb_setting_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="隐私政策"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />



            <com.diskkiller.widget.layout.SettingBar
                android:id="@+id/sb_setting_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="版本更新"
                app:bar_rightDrawable="@drawable/arrows_right_ic"
                app:bar_rightText="1.0.0"
                >


                <ImageView
                    android:id="@+id/iv_update_tip"
                    android:visibility="invisible"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/picture_orange_oval"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="50dp"
                    />


            </com.diskkiller.widget.layout.SettingBar>




            <com.diskkiller.widget.layout.SettingBar
                android:id="@+id/sb_setting_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="关于我们"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>