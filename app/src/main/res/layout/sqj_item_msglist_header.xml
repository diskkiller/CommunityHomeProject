<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_gonggao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="75dp">

                <com.shehuan.niv.NiceImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icon_msg_header1"
                    app:corner_radius="4dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="社区公告"
                    android:textColor="#ff333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_gonggao_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="您有新的通知待查看"
                    android:textColor="#ff999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_gonggao_new"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/sqj_bg_white_shap_30"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="13sp"
                    android:visibility="gone" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:id="@+id/ll_renwu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="75dp">


                <com.shehuan.niv.NiceImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icon_msg_header2"
                    app:corner_radius="4dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="任务消息"
                    android:textColor="#ff333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_renwu_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="80dp"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="您有新的任务消息待查看"
                    android:textColor="#ff999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_mission_new"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/sqj_bg_white_shap_30"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:textColor="@color/color_ffffff"
                    android:textSize="13sp"
                    android:visibility="gone" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

</LinearLayout>