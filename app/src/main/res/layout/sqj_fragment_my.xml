<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineVisible="false"
        app:leftIcon="@null"
        />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/avatar_placeholder_ic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#333333"
                android:textSize="22sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="10dp"
            android:layout_marginRight="5dp"
            android:text="完善用户信息"
            android:textColor="#666666"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/arrows_right_ic"
            />


    </LinearLayout>


        <com.diskkiller.widget.layout.SettingBar
            android:id="@+id/sb_user_setting_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:bar_leftText="家庭信息"
            app:bar_rightDrawable="@drawable/arrows_right_ic"
            app:bar_leftDrawable="@mipmap/ic_user_setting_family"
            />


        <com.diskkiller.widget.layout.SettingBar
            android:id="@+id/sb_user_account_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:bar_lineVisible="true"
            app:bar_lineDrawable="#CCCCCC"
            app:bar_leftText="账号安全"
            app:bar_leftDrawable="@mipmap/ic_user_account_security"
            app:bar_rightDrawable="@drawable/arrows_right_ic" />

    <com.diskkiller.widget.layout.SettingBar
            android:id="@+id/sb_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="意见反馈"
            app:bar_rightDrawable="@drawable/arrows_right_ic"
            app:bar_leftDrawable="@mipmap/ic_user_feedback"
            />


    <com.diskkiller.widget.layout.SettingBar
            android:id="@+id/sb_user_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="设置"
            android:layout_marginTop="10dp"
            app:bar_rightDrawable="@drawable/arrows_right_ic"
            app:bar_leftDrawable="@mipmap/ic_user_setting"
        />


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="58dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/shape_r5_white_bg"
        android:backgroundTint="#EC3937"
        android:enabled="true"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="15sp" />

    </LinearLayout>


